{% extends 'base.html.twig' %}

{% block title %}Les articles{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        {% for article in articles %}
        <div class="col-md-6">
            <div class="card mb-6">
                <div class="card-header p-0">
                    <img src="{{vich_uploader_asset(article, 'imageFile') }}" width="100%">
                </div>
                <div class="card-body text-center">
                    <h4>{{ article.title }}</h4>
                    <p>Responsive web design is an approach to web design that makes web pages render well on a
                        variety of
                        devices and screen sizes.</p>
                </div>
                <div class="card-footer">
                    <a href="{{path('blog_show', {id: article.id, slug: article.slug}) }}" class="btn btn-success">Learn
                        more...</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<div class="navigation">
    {{ knp_pagination_render(articles) }}
</div>
{% endblock %}